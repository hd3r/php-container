{
    "name": "hd3r/container",
    "description": "Lightweight PSR-11 dependency injection container with autowiring and caching.",
    "type": "library",
    "license": "MIT",
    "keywords": ["container", "dependency-injection", "di", "psr-11", "autowiring", "php"],
    "require": {
        "php": "^8.1",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Hd3r\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hd3r\\Container\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/Unit/Fixtures/",
            "tests/Integration/Fixtures/",
            "tests/Feature/Fixtures/"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs:fix": "vendor/bin/php-cs-fixer fix",
        "ci": ["@cs", "@analyse", "@test"]
    },
    "config": {
        "sort-packages": true
    }
}
